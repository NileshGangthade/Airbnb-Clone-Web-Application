<% layout("layouts/boilerplate.ejs") %>

<div class="container mt-5 mb-10">
  <div class="card mx-auto show-card">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>">
    
    <div class="card-body">
      <h5 class="card-title fw-bold"><%= listing.title %></h5>
      <i><p class="card-text"> Owned By: <%= listing.owner.username %></p></i>
      <p class="card-text"><%= listing.description %></p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </li>
        <li class="list-group-item">
          <strong>Location:</strong> <%= listing.location %>
        </li>
        <li class="list-group-item">
          <strong>Country:</strong> <%= listing.country %>
        </li>
      </ul>

      <% if(currentUser && currentUser.id === listing.owner.id){ %>
        <div class="mt-3 d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary w-100 me-2">Edit</a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="w-100 ms-2">
          <button type="submit" class="btn btn-outline-danger w-100">Delete</button>
        </form>
      </div>
    <% } %>
    </div>
    </div>
  </div>
  <hr>
  
  <div class="reviews col-8 offset-2 mb-2">
  <h3>Leave a Review</h3>
  <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation g-3 " novalidate>
  <div class="mb-3">
  <fieldset class="starability-growRotate" id="rating-stars">
    <legend class="form-label mb-1">Rating: </legend>

    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
    
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>

    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>

    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>

    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>

    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>

  <div id="rating-feedback" class="form-text text-muted mt-2">No rating selected.</div>
  <div class="invalid-feedback d-none">Please select a rating.</div>
</div>

  <div class="mb-3">
    <label for="comment" class="form-label">Your Review</label>
    <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
    <div class="invalid-feedback">Please write a comment.</div>
  </div>

  <button type="submit" class="btn btn-outline-primary w-20 mb-2">Submit  Review</button>
  </form>
  </div>
  

  <div class="my-4">
  <h3 class="mb-4">All Reviews</h3>

  <% if (listing.reviews.length === 0) { %>
    <div class="alert alert-secondary" role="alert">
      No reviews yet. Be the first to leave one!
    </div>
  <% } else { %>
    <div class="row g-3">
      <% for (let review of listing.reviews) { %>
        <div class="col-md-6">
          <div class="border rounded p-3 shadow-sm h-100">
            <div class="d-flex justify-content-between mb-2">
              <h5>
                  <p class="starability-result" data-rating="<%= review.rating %>"> </p>
              </h5>
              <small class="text-muted">
                <%= new Date(review.createdAt).toLocaleDateString() %>
              </small>
            </div>

            <p class="mb-1"><%= review.comment %></p>

            <% if (review.author) { %>
              <small class="text-muted">â€” <%= review.author.username %></small>
            <% } %>

            <div class="mt-3">
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-outline-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>



</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const ratingInputs = document.querySelectorAll('input[name="review[rating]"]');
  const feedback = document.getElementById('rating-feedback');
  const invalidMsg = document.querySelector('.invalid-feedback');

  const ratingLabels = {
    1: "Terrible",
    2: "Not good",
    3: "Average",
    4: "Very good",
    5: "Amazing"
  };

  ratingInputs.forEach(input => {
    input.addEventListener('change', () => {
      const value = parseInt(input.value);
      if (value > 0) {
        feedback.textContent = `${ratingLabels[value]}`;
        invalidMsg.classList.add('d-none');
      } else {
        feedback.textContent = 'No rating selected.';
      }
    });
  });

  // Add form submit validation
  const form = document.querySelector('form');
  form.addEventListener('submit', function (e) {
    const selected = document.querySelector('input[name="review[rating]"]:checked');
    if (!selected || selected.value === "0") {
      e.preventDefault();
      invalidMsg.classList.remove('d-none');
      feedback.textContent = "No rating selected.";
    }
  });
});
</script>



