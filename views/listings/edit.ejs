<% layout("layouts/boilerplate.ejs") %>

<div class="container mt-4 mb-5">
  <h3 class="mb-4">Edit Your Listing</h3>

  <form class="row g-3 needs-validation" method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" novalidate>
    <div class="col-md-6">
      <label for="titleInput" class="form-label">Listing Title:</label>
      <input type="text" class="form-control" id="titleInput" name="listing[title]" value="<%= listing.title %>" required>
      <div class="invalid-feedback">
        Please enter a title.
      </div>
    </div>

    

    <div class="col-md-6">
      <label for="priceInput" class="form-label">Price (INR):</label>
      <input type="number" class="form-control" id="priceInput" name="listing[price]" value="<%= listing.price %>" required>
      <div class="invalid-feedback">
        Please enter a valid price.
      </div>
    </div>

    <div class="col-md-12">
      <label for="descriptionInput" class="form-label">Description:</label>
      <textarea class="form-control" id="descriptionInput" name="listing[description]" rows="3" required><%= listing.description %></textarea>
      <div class="invalid-feedback">
        Please provide a description.
      </div>
    </div>

    <div class="col-md-12">
  <label class="form-label">Current Image:</label><br>
  <img id="previewImage" src="<%= listing.image.url %>" alt="Current Image" class="img-thumbnail mb-2" style="max-height: 200px;">
</div>

<!-- Upload new image -->
<div class="col-md-12">
  <label for="imageInput" class="form-label">Upload New Image:</label>
  <input type="file" class="form-control" id="imageInput" name="listing[image]" accept="image/*">
  <div class="invalid-feedback">
    Please provide a valid image (.png, .jpg, .jpeg), less than 2MB.
  </div>
</div>

    <div class="col-md-6">
      <label for="locationInput" class="form-label">City:</label>
      <input type="text" class="form-control" id="locationInput" name="listing[location]" value="<%= listing.location %>" required>
      <div class="invalid-feedback">
        Please enter a valid city.
      </div>
    </div>

    <div class="col-md-6">
      <label for="countryInput" class="form-label">Country:</label>
      <input type="text" class="form-control" id="countryInput" name="listing[country]" value="<%= listing.country %>" required>
      <div class="invalid-feedback">
        Please enter a valid country.
      </div>
    </div>

    <div class="col-12">
      <button class="btn btn-success" type="submit">Update Listing</button>
    </div>
  </form>
</div>





